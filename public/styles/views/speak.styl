@import "../utils/variables";
@import "../utils/mixins";

.speak-view {
  background: url("/images/bg1.jpg");
  cover();

  .label {
      width: 74%;
      position : absolute;
      right : 0;
      top: 52%;
  }

  .btn-wrap {
    position: absolute;
    top: 76%;
    left : 36%;
    .btn {
      vertical-align: middle;
      pointer-events: none;
    }
    .btn-pick {
        display : none;
        opacity : 0;
    }
    .zoom {
      position: absolute;
      top: 0;
      right: 25%;
      .inner {
        position : relative;
        .item {
          position :absolute;
          opacity : 0;
        }
      }
    }
  }

  .zzz {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .snot,
  .bubbles {
    display: none;
    position : absolute;
  }

  .bottle,
  .watter {
    bottom: -2px;
    width: 84px;
    left: 7%;
    position : absolute;
  }
  .watter {
    bottom: -175px;
  }

  .snot {
    position : absolute;
    width : 100px;
    bottom: 29%;
    left: 15%;
  }

  .bubbles {
    width : 100%;
    height : 100%;

    .item {
      position : absolute;
      width 40px;
      opacity : 1;
      transform: scale(1.2);
    }
  }
}

